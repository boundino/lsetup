parse_git_branch() { git branch --no-color 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/\1/' ; }
PS1=$'${debian_chroot:+($debian_chroot)}\[\e[33m\]\u\[\e[33;2m\]:~ \[\e[00m\]\[\e[34m\]\h\[\e[00m\]:\[\e[38;2;205;162;184m\]\w \[\e[00m\]
\[\e[34;2m\]($(parse_git_branch))\[\e[00m\] \[\e[38;2;205;162;184m\]${PWD##*/}/\[\e[00m\] \[\e[38;2;170;170;170m\]\u2044(\u2044\u2044\u2022\u2044\u03C9\u2044\u2022\u2044\u2044)\u2044\[\e[00m\]$ '
PS4=$'\[\e[38;2;165;255;170;1m\]L${LINENO} + \[\e[0m\]'

