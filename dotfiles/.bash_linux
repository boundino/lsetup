function ctf() {
    args=()
    arg_v=0
    for i in $@
    do
        if [[ $i == "-v" ]]; then arg_v=1 ; 
        else args+=($i)
        fi
    done
    summ=0
    for i in ${args[@]}
    do
        countt=$(ls -l $i | grep "^-" | wc -l)
        [[ $arg_v -eq 1 ]] && echo -e "$countt \e[2m($i)\e[0m"
        summ=$(($summ+$countt))
    done
    [[ $arg_v -eq 1 ]] && {
        echo -e "------------"
        echo -e "\e[4;1m$summ\e[0m \e[2m(sum)\e[0m" ; } || {
        echo $summ
    }
}; export -f ctf

function clearfolder() {
    for i in "*.so" "*.d" "*.pcm"
    do 
        # [[ -z `ls $i 2> /dev/null` ]] || { echo -ne "\e[2mrm:\e[0m " ; ls $i ; rm $i ; }
        [[ -z `ls $i 2> /dev/null` ]] || { 
            echo -ne "\e[2m" ; 
            rm -v $i ; 
            echo -ne "\e[0m" ;
        }
    done
    echo -ne "\e[2m" ; 
    rm -v `find . -name *~` 
    echo -ne "\e[0m" ;
}; export -f clearfolder

