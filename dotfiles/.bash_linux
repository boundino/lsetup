packf() {
    par=${1%%'/'}
    name=${par##*/}
    file=${name%%.*}
    ftype=${name##*.}
    [[ x$ftype != x$name ]] && { file=${file}-${ftype} ; }
    tar -czvf ${file}.tar.gz $1
}

